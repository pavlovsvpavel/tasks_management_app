{
  "expo": {
    "name": "My tasks",
    "slug": "tasks-management-app",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/logo.png",
    "scheme": "tasks",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/logo.png",
        "backgroundColor": "#ffffff"

      },
      "permissions": [
        "android.permission.INTERNET"
      ],
      "package": "com.ppsoft.tasks-app",
              "navigationBarColor": "#1F1F1F",
        "navigationBarIconColor": "dark"
    },
    "plugins": [
      "expo-router",
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/logo.png",
          "imageWidth": 50,
          "resizeMode": "contain",
          "backgroundColor": "#ffffff"
        }
      ],
      [
        "expo-build-properties",
        {
          "android": {
            "usesCleartextTraffic": false,
            "enableEdgeToEdge": true
          }
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true
    },
    "extra": {
      "router": {},
      "eas": {
        "projectId": "3bb0b83d-5edd-4a3b-b105-15e7f2573c50"
      }
    }
  }
}
